
# Database Configuration
# Supabase URL - Get this from your Supabase project dashboard
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key - Public key for client-side operations
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key - Private key for server-side operations (DO NOT EXPOSE TO CLIENT)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Application Configuration
# Environment: development, staging, production
NODE_ENV=development

# Server Configuration
# Port for the Express server (Replit uses 5000)
PORT=5000

# Host binding (use 0.0.0.0 for Replit accessibility)
HOST=0.0.0.0

# Security Configuration
# JWT Secret for token signing (generate a secure random string)
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_chars

# Session secret for Express sessions
SESSION_SECRET=your_session_secret_here_minimum_32_chars

# Cookie settings
COOKIE_SECURE=false
COOKIE_SAME_SITE=strict

# Rate Limiting Configuration
# General API rate limit (requests per 15 minutes)
RATE_LIMIT_GENERAL=100

# Authentication rate limit (login attempts per 15 minutes)
RATE_LIMIT_AUTH=5

# API rate limit (API calls per 15 minutes)
RATE_LIMIT_API=1000

# Logging Configuration
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log file path (optional)
LOG_FILE=logs/app.log

# External Services
# Email service configuration (for notifications)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_email_api_key_here
EMAIL_FROM=noreply@sportx.com

# File Storage Configuration
# Maximum file upload size in MB
MAX_FILE_SIZE=10

# Allowed file extensions for uploads
ALLOWED_FILE_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# Monitoring & Analytics
# Error tracking service API key
ERROR_TRACKING_API_KEY=your_error_tracking_key_here

# Performance monitoring
PERFORMANCE_MONITORING_ENABLED=true

# Feature Flags
# Enable/disable specific features
FEATURE_REAL_TIME_CHAT=true
FEATURE_VIDEO_CALLS=false
FEATURE_AI_RECOMMENDATIONS=true

# Development Configuration
# Enable debug mode
DEBUG_MODE=true

# Enable verbose logging
VERBOSE_LOGGING=false

# Disable security features for local development
DISABLE_SECURITY_HEADERS=false
